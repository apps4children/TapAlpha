<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iitk"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:icon="@drawable/logo"
        android:label="@string/app_name">
        <activity
            android:name=".GameActivity"
            android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".Instruction"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LevelEasyScreen1"
            android:screenOrientation="portrait">
        </activity>
               <activity android:name=".LevelEasyScreen2" 
                   android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LevelEasyScreen3"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LevelEasyScreen4"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LevelEasyGameOver"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Settings"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
       </activity>
       <activity android:name=".LevelMediumScreen1"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LevelMediumScreen2"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LevelMediumGameOver"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LevelHardScreen1"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LevelHardScreen2"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LevelHardGameOver"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.iitk.report.DisplayRecord"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
